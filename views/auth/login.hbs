<div class="container backgroundBlue">
	<div class="row">
		<div class="col xs-2"></div>
		<div class="col xs-8">
			<button class="buttonWhite">
				Inicia sesi√≥n con Facebook
			</button>
		</div>
		<div class="col xs-2"></div>
	</div>

	<hr>

	<form action="/auth/login" method="POST" id="form-container">
		<div class="form-group">
			<label for="email">Email</label>
			<input id="email" type="text" name="email" placeholder="Your email">
		</div>

		<div class="form-group">
			<label for="password">Password: </label>
			<input id="password" type="password" name="password" placeholder="Your password">
		</div>
		<br>
		{{#if message }}
		<div class="error-message">{{ message }}</div>
		{{/if}}


		<div class="centrado">
			<button class="buttonWhite">Login</button>
		</div>
		<br>
		<p class="account-message">
			Don't have an account yet?
			<a href="/auth/signup">Signup</a>
		</p>
	</form>

</div>