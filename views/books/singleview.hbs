<script>
  document.querySelector("#chat").onclick = (e) => {
    fetch("/chat",
      {
        method: "POST",
        headers: {
          'Accept': 'application/json',
          'Content-Type': 'application/json'
        },
        body: JSON.stringify({ id: e.target.getAttribute("id") })
      })
      .then(res => res.json())
      .then(json => location.href = `/chat/${json._id}`)
  }
</script>